<%- include('partials/header', { title: "Add Post" }) %>

<div class="d-flex justify-content-center align-items-center flex-column py-5">
    <h2 class="fw-bold text-primary mb-4 text-center">Upload Your Images</h2>

    <form method="POST" enctype="multipart/form-data" action="/create"
          class="card shadow-sm border-0 p-4" style="max-width: 500px; width: 100%;">

        <!-- Drag and Drop Style File Input -->
        <div class="mb-4">
            <label for="image"
                   class="form-label fw-semibold mb-2 text-secondary">
                Select Image(s)
            </label>

            <div class="file-drop-area border border-2 rounded p-4 text-center ">
                <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                <p class="text-muted mb-2">Drag & drop your files here or click to browse</p>
                <input type="file" id="image" name="files[]" multiple required
                       class="form-control form-control-lg" style="opacity: 0; position: absolute; inset: 0; cursor: pointer;">
            </div>
        </div>

        <button type="submit" class="btn btn-primary text-white w-100 py-2 fw-semibold">
            <i class="bi bi-upload me-1"></i> Upload
        </button>
    </form>
</div>

<!-- Extra Styles -->
<style>
    .file-drop-area {
        position: relative;
        transition: all 0.3s ease;
    }
    .file-drop-area:hover {
        background-color: #d0e4ff;
        border-color: #5a9fff;
    }
</style>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
