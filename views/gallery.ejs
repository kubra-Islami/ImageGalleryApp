<%- include('partials/header',{title:"Add Post"}) %>
<section class="container gallery-block">
    <div class="gallery-header">
        <h2>ðŸŒŸ Gallery</h2>
        <p class="text-muted">A beautiful collection of your uploaded moments.</p>
    </div>

    <div class="row g-4">
        <% images.forEach((gallery, index) => { %>
            <% if (gallery.filename) { %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="gallery-img">
                        <img src="<%= gallery.filename %>" alt="Uploaded image" loading="lazy">
                        <div class="overlay">
                            <div class="delete">
                                <a href="/delete/<%= index %>">
                                    <button class="btn btn-danger">Delete</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }) %>
    </div>
</section>
