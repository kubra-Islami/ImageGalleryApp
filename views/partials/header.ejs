<style>
    body {
        background-color: #f9f9f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
        background-color: rgb(234, 245, 247) !important;
    }

    .gallery-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .gallery-header h2 {
        font-weight: 700;
        color: #17a2b8;
    }

    .gallery-block {
        padding: 60px 0;
    }

    .gallery-img {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f9f9f9;
    }

    .gallery-img img {
        width: 100%;
        height: 100%;
        object-position: center;
        border-radius: 12px;
        transition: transform 0.3s ease;
    }

    /*.gallery-img:hover .overlay {*/
